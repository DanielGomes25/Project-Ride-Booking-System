generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Customer {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String  @unique

  // Relacionamento com Ride
  rides Ride[]

  @@map("customers")
}

model Ride {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  origin       String
  destination  String
  customer_id  String  @db.ObjectId
  driver_id    String  @db.ObjectId
  distance     Float
  duration     Int
  price        Float

  // Relacionamentos
  customer     Customer @relation(fields: [customer_id], references: [id])
  driver       Driver   @relation(fields: [driver_id], references: [id])

  @@map("rides")
}

model Driver {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  vehicle      String
  rating       Float
  rate_per_km  Float
  min_distance Float
  comment      String?

  // Relacionamento com Ride
  rides Ride[]

  @@map("drivers")
}